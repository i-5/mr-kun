  <servlet-mapping>
    <servlet-name>DR_ProfileCtlr</servlet-name>
    <url-pattern>/DR_ProfileCtlr</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <taglib>
    <taglib-uri>http://www.so-netm3.co.jp/taglib.tld</taglib-uri>
    <taglib-location>/WEB-INF/taglib.tld</taglib-location>
  </taglib>

  <ejb-ref>
    <ejb-ref-name>ejb/DRManager</ejb-ref-name>
    <ejb-ref-type>Session</ejb-ref-type>
    <home>jp.ne.sonet.mrkun.ejb.DRManagerHomeIntf</home>
    <remote>jp.ne.sonet.mrkun.ejb.DRManagerRemoteIntf</remote>
  </ejb-ref>

</web-app>
